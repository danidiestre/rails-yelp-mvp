<div class="container">

    <h1><%= @restaurant.name %></h1>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
    <p><%= @restaurant.category %></p>

    <% @restaurant.reviews.each do |review|  %>
        <h3>Customer Review:</h3>
        <%= review.content %>
        <h3>Rating:</h3>
        <p><%= review.rating %></p>
    <% end %>

    <%= link_to 'Back to list', restaurants_path%> <br>
    <%= link_to 'Add a restaurant Review', new_restaurant_review_path(@restaurant)%> <br>



</div>
